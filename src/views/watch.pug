extends base.pug

block content
	video#video(src="/" + video.fileUrl, controls)
	div
		button#play Play
		button#mute Mute
		span#time 00:00/00:00
		input(type="range", min="0",max="1", step="0.1")#volume
	//-div
		p=video.description
		ul
		each tag in video.hashtags
			li=tag
		small=video.createAt
		
		br
		a(href=`${video.id}/edit`) Edit video &rarr;
		br
		a(href=`${video.id}/remove`) Delete video &rarr;
block scripts
	script(src="/static/js/videoPlayer.js")