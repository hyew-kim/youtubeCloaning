extends base.pug

block content
	div#videoContainer
		video#video(src="/" + video.fileUrl, controls)
		div#videoControls
			button#play Play
			button#mute Mute
			div
				span#currentime 00:00
				span /
				span#totalTime 00:00
			input(type="range", min="0",max="1", step="0.1", value="0.5")#volume
			input(type="range", min="0",step="1", value="0")#timeline
			button#fullScreen Enter Full Screen
	//-div
		p=video.description
		ul
		each tag in video.hashtags
			li=tag
		small=video.createAt
		
		br
		a(href=`${video.id}/edit`) Edit video &rarr;
		br
		a(href=`${video.id}/remove`) Delete video &rarr;
block scripts
	script(src="/static/js/videoPlayer.js")