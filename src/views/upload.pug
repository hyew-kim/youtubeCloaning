extends base.pug
block content
	div
		video#view
		button#startBtn Start Recording
	if (errorMessage)
		em=errorMessage
	form(method="POST", enctype="multipart/form-data")
		label(for="video") Video File 
		input(id="video", name="video", type="file", accept="video/*", required)
		input(name="title", type="text", placeholder="Title",required)
		input(name="description", type="text", placeholder="Desciption",required)
		input(name="hashtags", type="text", placeholder="Hashtags, separated by comma.",required)
		input(type="submit", value="Upload Video")
block scripts
	script(src="/static/js/recorder.js") 